<%= if @current_user do %>
  <div class="row">
    <div class="col">
      <span><%= link "New Task", to: task_path(@conn, :new) %></span>
    </div>
  </div>
<% end %>

<h1>Your Tasks</h1>

<%= Enum.map @tasks, fn task -> %>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title"><%= task.created_by %></h6>
        <p><%= task.title %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
